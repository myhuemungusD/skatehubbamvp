// Firestore Security Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game documents - players can write, everyone can read (spectator mode)
    match /games/{gameId} {
      allow read: if request.auth != null; // Anyone can spectate
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.createdBy ||
        request.auth.uid == resource.data.opponent
      );
    }
    
    // Game rounds - only players in the game can read/write
    match /games/{gameId}/rounds/{roundId} {
      allow read, write: if request.auth != null &&
        exists(/databases/$(database)/documents/games/$(gameId)) &&
        (request.auth.uid == get(/databases/$(database)/documents/games/$(gameId)).data.createdBy ||
         request.auth.uid == get(/databases/$(database)/documents/games/$(gameId)).data.opponent);
    }
    
    // Mail collection for email triggers - authenticated users can write
    match /mail/{emailId} {
      allow write: if request.auth != null;
      allow read: if false; // Only Firebase extensions should read emails
    }
    
    // Allow all authenticated users to read/write other collections for development
    match /{collection}/{document} {
      allow read, write: if request.auth != null && 
        collection != 'games' && 
        collection != 'users' &&
        collection != 'mail';
    }
  }
}