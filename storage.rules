rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Structured clip storage: clips/{challengeId}/{userId}/{filename}
    match /clips/{challengeId}/{userId}/{fileName} {
      allow read: if true; // Public playback now, tighten later
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024
        && request.resource.contentType.matches('video/.*');
    }

    // Legacy flat clips path (retain for migration period)
    match /clips/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /games/{gameId}/tricks/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}